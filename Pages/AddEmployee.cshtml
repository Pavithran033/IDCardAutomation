@page

@model IDCardAutomation.Pages.AddEmployeeModel

@{

    ViewData["Title"] = "Add Employee";

}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom CSS -->
<link href="/css/AddEmployee.css" rel="stylesheet" asp-append-version="true"/>

@{
    var userRole = HttpContext.Session.GetString("UserRole");
    string backUrl = userRole == "Hr" ? "Account/Logout" : "/Dashboard";
}

@if (userRole == "Hr")
{
    <a href="/HrDashboard" class="btn btn-back">Back</a>
}
else
{
    <a href="/Dashboard" class="btn btn-back">Back</a>
}


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-container p-4 rounded shadow-lg w-100" style="max-width: 800px;">
        <h2 class="text-center mb-4">Add Employee</h2>

        

        <form method="post" enctype="multipart/form-data" onsubmit="return showSuccess();">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="ecode" class="form-label">Emp Code</label>
                    <input asp-for="Employee.EmpCode" id="ecode" class="form-control" placeholder="Enter Employee Code" required />
                </div>
                <div class="col-md-6">
                    <label for="fname" class="form-label">Full Name</label>
                    <input asp-for="Employee.FullName" id="fname" class="form-control" placeholder="Enter Full Name" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input asp-for="Employee.DOB" type="date" id="dob" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label for="dept.id" class="form-label">Department ID</label>
                    <input asp-for="Employee.DepartmentID" id="dept.id" class="form-control" placeholder="Enter Department ID" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="design" class="form-label">Designation</label>
                    <input asp-for="Employee.Designation" id="design" class="form-control" placeholder="Enter Designation" required />
                </div>
                <div class="col-md-6">
                    <label for="p.number" class="form-label">Phone Number</label>
                    <input asp-for="Employee.PhoneNumber" id="p.number" class="form-control" placeholder="Enter Phone Number" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Employee.Email" type="email" id="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="col-md-6">
                    <label for="doj" class="form-label">Date of Joining</label>
                    <input asp-for="Employee.DOJ" type="date" id="doj" class="form-control" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="b.group" class="form-label">Blood Group</label>
                    <input asp-for="Employee.BloodGroup" id="b.group" class="form-control" placeholder="Enter Blood Group" required />
                </div>
                <div class="col-md-6">
                    <label for="address" class="form-label">Address</label>
                    <input asp-for="Employee.Address" type="text" id="address" class="form-control" placeholder="Enter Address" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Select Photo:</label>
                <input asp-for="Photo" type="file" class="form-control" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-sm px-4">Submit</button>
            </div>
        </form>
    </div>
</div>



<script>

    function showSuccess() {

        alert("Employee successfully created!");

        return true; // Allow form submission

    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

