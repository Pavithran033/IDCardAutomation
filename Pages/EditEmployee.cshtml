@page "{id:int}"
@model IDCardAutomation.Pages.EditEmployeeModel
@{
    ViewData["Title"] = "Edit Employee";
}

<!-- ✅ Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Your Custom CSS -->
<link href="~/css/Editemployee.css" rel="stylesheet" asp-append-version="true" />

<h2 class="mb-4">Edit Employee Details</h2>

<form method="post" enctype="multipart/form-data" class="container">
    <input type="hidden" asp-for="Employee.EmployeeID" />

    <div class="mb-3">
        <label class="form-label">Employee Code</label>
        <input asp-for="Employee.EmpCode" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="Employee.FullName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input asp-for="Employee.DOB" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Date of Joining</label>
        <input asp-for="Employee.DOJ" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Department ID</label>
        <input asp-for="Employee.DepartmentID" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Designation</label>
        <input asp-for="Employee.Designation" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Employee.PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Employee.Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Blood Group</label>
        <input asp-for="Employee.BloodGroup" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input asp-for="Employee.Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Current Photo</label><br />
        @if (!string.IsNullOrEmpty(Model.Base64Photo))
        {
            <img src="@Model.Base64Photo" alt="Employee Photo" class="img-thumbnail" width="150" />
        }
        else
        {
            <span class="text-muted">No photo uploaded</span>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Photo</label>
        <input type="file" asp-for="NewPhoto" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<!-- ✅ Bootstrap JS (for components like modals, dropdowns, etc.) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
