@page
@model IDCardAutomation.Pages.DTS.DTSClearanceRequestsModel
@{
    ViewData["Title"] = "DTS Clearance Requests";
}
<link href="/css/studentstatus.css" rel="stylesheet" asp-append-version="true" />
<h2 class="text-center">DTS Clearance Requests</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <input type="text" id="searchInput" class="form-control" placeholder="Search by name, emp code or email..." onkeyup="filterTable()" />
    </div>
    <div class="filter-box">
        <select id="statusFilter" class="form-select" onchange="filterTable()">
            <option value="">All</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
        </select>
    </div>


    <!-- Logout Button -->
    
   
   
</div>

    <table class="table table-bordered table-striped" id="requestsTable">
        <thead class="table-dark">
            <tr>
                <th>S.No</th>
                <th>Emp Code</th>
                <th>Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Resignation Date</th>
                <th>Status</th>
                <th>Remarks</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Requests.Count; i++)
            {
                var req = Model.Requests[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@req.EmpCode</td>
                    <td>@req.Name</td>
                    <td>@req.Department</td>
                    <td>@req.Designation</td>
                    <td>@req.Email</td>
                    <td>@req.ResignationDate.ToString("dd-MM-yyyy")</td>
                    <td>
                        <span class="badge @(req.Status == "Approved" ? "bg-success" : "bg-warning text-dark")">
                            @req.Status
                        </span>
                    </td>
                    <td>@(string.IsNullOrWhiteSpace(req.Remarks) ? "None" : req.Remarks)</td>
                <td>
                    @if (req.Status == "Approved")
                    {
                        <span class="text-muted">Locked</span>
                    }
                    else
                    {
                        <form method="post">
                            <textarea name="Remarks[@req.RequestID]" class="form-control mb-1" rows="1">@req.Remarks</textarea>
                            <button type="submit" name="action" value="save_@req.RequestID" class="btn btn-sm btn-warning">Save Changes</button>
                            <button type="submit" name="action" value="approve_@req.RequestID" class="btn btn-sm btn-success ms-2">Approve</button>
                        </form>

                    }
                </td>


                </tr>
            }
        </tbody>
    </table>



@section Scripts {
    <script>
        function filterTable() {
            const search = document.getElementById("searchInput").value.toLowerCase();
            const filter = document.getElementById("statusFilter").value.toLowerCase();
            const rows = document.querySelectorAll("#requestsTable tbody tr");

            rows.forEach(row => {
                const name = row.cells[2].innerText.toLowerCase();
                const empCode = row.cells[1].innerText.toLowerCase();
                const email = row.cells[5].innerText.toLowerCase();
                const status = row.cells[7].innerText.toLowerCase();

                const matchesSearch = name.includes(search) || empCode.includes(search) || email.includes(search);
                const matchesFilter = !filter || status === filter;

                row.style.display = matchesSearch && matchesFilter ? "" : "none";
            });
        }
    </script>
}
