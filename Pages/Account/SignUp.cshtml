@page
@model IDCardAutomation.Account.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<link href="~/css/signup.css" rel="stylesheet" asp-append-version="true" />

<a asp-page="/Account/SignIn" class="btn btn-back">Back</a>

<div class="signup-background">
    <div class="form-container shadow-lg">
        <!-- College Logo -->
        <img src="~/images/Kumaraguru_College_of_Technology_logo.png" alt="App Logo" class="logo" />

        <h2 class="fw-bold mb-4">Sign Up</h2>

        <form method="post">
            <input type="email" name="Email" asp-for="Email" placeholder="Email" required />
            <input type="password" name="Password" asp-for="Password" placeholder="Password" required />
            <input type="password" name="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password" required />

            <div class="custom-select">
                <select class="se" name="Role" asp-for="Role" required>
                    <option value="Student">Student</option>
                    <option value="Employee">Employee</option>
                    @* <option value="Deliver">Deliver</option>
                    <option value="Hr">Hr</option>
                    <option value="Library">Library</option>
                    <option value="DepartmentUser">DepartmentUser</option>
                    <option value="DTS">DTS</option> *@
                    <!-- Uncomment if needed -->
                    <!-- <option value="Admin">Admin</option>
                    <option value="Osa">Osa</option> -->
                </select>
            </div>

            <button type="submit">Sign Up</button>
        </form>
    </div>
</div>
