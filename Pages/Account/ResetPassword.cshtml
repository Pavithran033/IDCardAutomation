@page
@model IDCardAutomation.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<link href="~/css/reset.css" rel="stylesheet" asp-append-version="true" />

<div class="reset-background">
    <div class="form-container shadow-lg">
        <!-- Logo -->
        <img src="~/images/Kumaraguru_College_of_Technology_logo.png"
             alt="College Logo" class="logo mb-3" />

        <h2>Reset Password</h2>

        <form method="post">
            <input type="password" asp-for="NewPassword" placeholder="New Password" required /><br />
            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required /><br />
            <input type="hidden" asp-for="Token" />
            <button type="submit">Reset</button>
        </form>

        <!-- Back button -->
        <a asp-page="/Account/SignIn" class="btn btn-back">Back</a>
    </div>
</div>
