@page
@model IDCardAutomation.Account.SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="/css/signinpage.css" rel="stylesheet" asp-append-version="true" />

<div class="login-background">
    <div class="form-container shadow-lg">
        <!-- College Logo -->
        <img src="~/images/Kumaraguru_College_of_Technology_logo.png" alt="College Logo" class="logo mb-3" />

        <h2 class="fw-bold mb-4">Login</h2>

        <form method="post">
            <!-- Email -->
            <div class="mb-3">
                <input type="email" name="Email" asp-for="Email" class="form-control" placeholder="Enter Email" required />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <input type="password" name="Password" asp-for="Password" class="form-control" placeholder="Enter Password" required />
            </div>

            <!-- Links -->
            <div class="d-flex justify-content-between mb-3">
                <a href="@Url.Page("/Account/SignUp")" class="small">Register</a>
                <a href="@Url.Page("/Account/ForgotPassword")" class="small">Forgot Password?</a>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>
