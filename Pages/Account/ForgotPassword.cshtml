@page
@model IDCardAutomation.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<link href="~/css/forgot.css" rel="stylesheet" asp-append-version="true" />

<div class="reset-background">
    <div class="form-container shadow-lg">
        <!-- Logo -->
        <img src="~/images/Kumaraguru_College_of_Technology_logo.png"
             alt="College Logo" class="logo mb-3" />

        <h2>Forgot Password</h2>

        <form method="post">
            <!-- Email -->
            <input type="email" asp-for="Email" placeholder="Enter your email" required /><br />

            <!-- Submit -->
            <button type="submit">Send Reset Link</button>
        </form>

        <!-- Back Button -->
        <a asp-page="/Account/SignIn" class="btn btn-back">Back</a>
    </div>
</div>
