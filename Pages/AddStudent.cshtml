@page
@model IDCardAutomation.Pages.AddStudentModel
@{
    ViewData["Title"] = "Add Employee";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom CSS -->
<link href="/css/AddEmployee.css" rel="stylesheet" asp-append-version="true"/>

<a asp-page="/Dashboard" class="btn btn-back">Back</a>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-container p-4 rounded shadow-lg w-100" style="max-width: 800px;">
        <h2 class="text-center mb-4">Add Student</h2>

        

        <form method="post" enctype="multipart/form-data" onsubmit="return showSuccess();">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="rollno" class="form-label">RollNumber</label>
                    <input asp-for="Student.RollNumber" id="rollno" class="form-control" placeholder="Enter RollNumber" required />
                </div>
                <div class="col-md-6">
                    <label for="fname" class="form-label">FullName</label>
                    <input asp-for="Student.FullName" id="fname" class="form-control" placeholder="Enter FullName" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input asp-for="Student.DOB" type="date" id="dob" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label for="dept.id" class="form-label">Department ID</label>
                    <input asp-for="Student.DepartmentID" id="dept.id" class="form-control" placeholder="Enter Department ID" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="yos" class="form-label">Year Of Study</label>
                    <input asp-for="Student.YearOfStudy" id="yos" class="form-control" placeholder="Enter Year Of Study" required />
                </div>
                <div class="col-md-6">
                    <label for="p.number" class="form-label">Phone Number</label>
                    <input asp-for="Student.PhoneNumber" id="p.number" class="form-control" placeholder="Enter Phone Number" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Student.Email" type="email" id="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="col-md-6">
                    <label for="b.group" class="form-label">Blood Group</label>
                    <input asp-for="Student.BloodGroup" id="b.group" class="form-control" placeholder="Enter Blood Group" required />
                </div>

            </div>

            <div class="row mb-3">
                
                <div class="col-md-6">
                    <label for="address" class="form-label">Address</label>
                    <input asp-for="Student.Address" type="text" id="address" class="form-control" placeholder="Enter Address" required />
                </div>
                <div class="col-md-6 custom-radio-group">
                    <label class="form-label">Hostel / Dayscholar</label>
                    <div class="radio-option">
                        <input asp-for="Student.HostelDayscholar" type="radio" id="hostel" name="Student.HostelDayscholar" value="Hostel" required />
                        <label for="hostel">Hostel</label>
                    </div>
                    <div class="radio-option">
                        <input asp-for="Student.HostelDayscholar" type="radio" id="dayscholar" name="Student.HostelDayscholar" value="Dayscholar" required />
                        <label for="dayscholar">Dayscholar</label>
                    </div>
                </div>
            </div>

            <div class="mb-3">

                <label class="form-label">Select Photo:</label>
                <input asp-for="Photo" type="file" class="form-control" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-sm px-4">Submit</button>
            </div>

        </form>
    </div>
</div>

<!-- JavaScript -->
<script>
    function showSuccess() {
        alert("Student successfully created!");
        return true; // Allow form submission
    }
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

